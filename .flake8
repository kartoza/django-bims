[flake8]
exclude = */docs/*,*/.tox/*,*/.venv/*,.pycharm_helpers/*,*/migrations/*,docs/*,fabfile.py,*/__init__.py,secret.py,deployment/*,restore_geonode.py,geonode_queue_settings.py
max-line-length = 79

# E12x continuation line indentation
# E251 no spaces around keyword / parameter equals
# E303 too many blank lines (3)
# F405 name may be undefined, or defined from star imports: module
ignore = E125,E126,E251,E303,F405,W504,W605,F901
